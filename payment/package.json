{
    "name": "payment",
    "version": "0.0.1",
    "engines": {
        "node": "11.6.x",
        "npm": "6.5.x"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "dotenv": "^16.4.5",
        "rimraf": "^5.0.5",
        "truffle": "^5.11.5"
    },
    "scripts": {
        "ganache": "ganache-cli -d --networkId 3431 --gasPrice 20000000000 --gasLimit 6721975",
        "start": "concurrently \"npm run ganache\" \"npm run migrate\"",
        "migrate": "rimraf ./build && truffle migrate --reset --compile-all"
    },
    "config": {
        "ganache": {
            "networkId": 3431,
            "gasPrice": 20000000000,
            "gasLimit": 6721975
        }
    }
}
